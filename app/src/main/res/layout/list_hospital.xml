<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linLayMain">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id: "
                android:maxLines="1"
                android:gravity="start"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvTitleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:maxLines="1"
                android:gravity="start"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvId"
                app:layout_constraintEnd_toStartOf="@id/tvName"
                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:maxLines="1"
                android:gravity="start"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvTitleName"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <TextView
                android:id="@+id/tvTitleAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitleName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAddress"
                />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toEndOf="@id/tvTitleAddress"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tvTitlePincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode: "
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPincode"
                />
            <TextView
                android:id="@+id/tvPincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                app:layout_constraintStart_toEndOf="@id/tvTitlePincode"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <TextView
                android:id="@+id/tvTitleCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City: "
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitlePincode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvCity"
                />
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvPincode"
                app:layout_constraintStart_toEndOf="@id/tvTitleCity"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
